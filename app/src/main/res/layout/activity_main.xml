        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dld"
        android:layout_centerHorizontal="true"
        android:background="#eee"
        android:max="100" />

    <Button
        android:id="@+id/dld"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
